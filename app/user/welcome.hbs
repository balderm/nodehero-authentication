<div id="login" class="container">

  <h6>Please Login To Your Account</h6>

  <form class="form-horizontal" action="/login" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-10">
        <input id="username" name="username" type="text" class="form-control" placeholder="Your username">
        <!--small id="helpUsername" class="form-text text-muted">Please enter the Username you picked when registering.</small-->
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input id="password" name="password" type="password" class="form-control" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
  		<div class="col-sm-10 col-sm-offset-2">
        <button id="inputSubmit" type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
